<WidthScreen@MDScreen>
    id: width_screen
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/blur.png'

    BoxLayout
        orientation: 'vertical'

        # Top spacer
        Widget
            size_hint_y: 1.5

        # Middle layer
        BoxLayout

            # Middle left spacer
            Widget
                size_hint_x: .1

            # main housing
            BoxLayout
                id: main
                orientation: 'vertical'
                size_hint_x: None
                width: 850
                size_hint_y: None
                height: 500
                canvas.before:
                    Color:
                        rgb: 0,0,0,1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgb: .3,.3,.3,1
                    Rectangle:
                        pos: main.pos
                        size: main.size
                MDLabel
                    id: slider_lbl
                    text: 'PENCIL DIAMETER'
                    halign: 'center'

                MDSlider:
                    min: 1
                    max: 10
                    show_off: False
                    value: app.line_width
                    hint: False
                    color: 1, 1, 1, 1
                    on_touch_move: slider_lbl.text = str(int(self.value))
                    on_touch_move: app.line_width = int(self.value)
                    on_touch_up: app.change_width(self.value)

                Widget

            # Middle right spacer
            Widget
                size_hint_x: .1

        # Bottom spacer
        Widget
            size_hint_y: 2


