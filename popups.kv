<ColorScreen@MDScreen>
    id: color_screen
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/blur.png'
    BoxLayout
        orientation: 'vertical'

        # Top spacer
        Widget
            size_hint_y: 1.5

        # Middle layer
        BoxLayout

            # Middle left spacer
            Widget
                size_hint_x: .1

            # main housing
            BoxLayout
                id: main
                orientation: 'vertical'
                size_hint_x: None
                width: 850
                size_hint_y: None
                height: 500
                canvas.before:
                    Color:
                        rgb: 0,0,0,1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgb: 1,1,1,1
                    Rectangle:
                        pos: main.pos
                        size: main.size

                GridLayout:
                    cols: 5
                    # 1
                    Button:
                        red: 0.941, 0, 0, 1
