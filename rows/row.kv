<Row@BoxLayout>
    Button:
        id: page_lbl
        font_size: 30

        size_hint_x: .1
        background_color: 0.141, 0.580, 0.956, 1

    Button:
        id: title_lbl
        multiline: True
        halign: 'center'
        font_size: 25
        size_hint_x: .3
        background_color: 0.141, 0.580, 0.956, 1

    Button:
        id: total_lbl
        size_hint_x: .1
        background_color: 0.141, 0.580, 0.956, 1

    Button:
        id: camera_lbl
        size_hint_x: .1
        background_color: 0.141, 0.580, 0.956, 1

    ClickableBox:
        id: wig
        text: 'tets'
        size_hint_x: None
        width: 400
        on_press: app.focused_row_properties_update(self, root.story_id, root.title, root.backtime)
        canvas.after:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
