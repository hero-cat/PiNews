



<Row@BoxLayout>
    Button:
        id: backtime_lbl
        size_hint_x: .1
        background_color: 0.141, 0.580, 0.956, 1

    Button:
        id: title_lbl
        font_size: 25
        size_hint_x: .3
        background_color: 0.141, 0.580, 0.956, 1
        on_press: app.current_widget = self.parent

    Button:
        id: camera_lbl
        size_hint_x: .1
        background_color: 0.141, 0.580, 0.956, 1
        on_release: app.change_widget()

    ClickableBox:
        id: wig
        text: 'tets'
        size_hint_x: .4

#        background_color: 1, 1, 1, 1
        on_press: app.current_widget = self
        on_press: app.story_id = root.story_id
        on_press: app.send_story_id(root.story_id)
        on_release: app.re_enter_page(root.story_id)
        on_release: app.root.current = 'drawing'


