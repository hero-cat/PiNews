#:include rows/row.kv
#:include popups.kv

ScreenManager:
    id: screen_manager



    LoginScreen:
        id: login
        name: 'login'
        manager: 'screen_manager'

    MenuScreen:
        id: menu_screen
        name: 'menu'
        manager: 'screen_manager'

    LWRundown
        id: lw_screen
        name: 'lw_screen'
        manager: 'screen_manager'

    TMRundown
        id: tm_screen
        name: 'tm_screen'
        manager: 'screen_manager'

    DrawingScreen:
        id: drawing_screen
        name: 'drawing_screen'
        manager: 'screen_manager'

    ColorScreen:
        id: color_screen
        name: 'color_screen'
        manager: 'screen_manager'

    WidthScreen:
        id: width_screen
        name: 'width_screen'
        manager: 'screen_manager'

    ClearAllConfScreen:
        id: clear_all_conf_screen
        name: 'clear_all_conf_screen'
        manager: 'screen_manager'


<LoginScreen>
    MDBoxLayout:
        canvas.before:
            Color:
                rgba: .3, .3, .3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Widget:
            size_hint_x: .1
        VertBox:
            size_hint_x: .8
            MDLabel:
                text: 'RUNDOWN \nREADER'
                halign: 'center'
                font_size: 60
                color: 1, 1, 1, 1
            MDTextField:
                id: login
                font_size: 28
                hint_text: "USERNAME"
                mode: "rectangle"
                on_focus: self.show_keyboard()
            MDTextField:
                id: password
                font_size: 28
                hint_text: "PASSWORD"
                mode: "rectangle"
                password: True
                on_focus: self.show_keyboard()
            MDBoxLayout
                Widget
                MDRaisedButton:
                    text: 'CONNECT'
                    on_press: root.login(login.text, password.text)
                Widget
            Widget
                size_hint_y: 4
        Widget:
            size_hint_x: .1


<MenuScreen@MDScreen>:
