#:include rows/row.kv

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: 'INDEX'
            size_hint_x: .05
        Button:
            text: 'TITLE'
            size_hint_x: .3
        Button:
            text: 'CAMERA'
            size_hint_x: .05
        Button:
            text: 'NOTES'
            size_hint_x: .4

    RecycleView
        id: rview
        data: app.rvdata
        viewclass: 'Row'
        RecycleBoxLayout:
            default_size: None, dp(50)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

    Button:
        size_hint_y: 0.1
        text: 'PULL'
        on_release: app.pull_json_data()
