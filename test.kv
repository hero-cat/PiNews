                text: 'CSTM_4'
                text_color: 1, 1, 1, 1
            Widget:
        Widget:
            size_hint_y: .7


<RundownTemplate@MDScreen>
    logo: 'assets/blank.png'
    BoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint_y: None
            height: 90
            canvas.before:
                Color:
                    rgba: .19, .19, .19, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Image
                source: root.logo


            Widget
                size_hint_x: .7

            MDIconButton:
                id: toggle_focus_btn
                icon: "alpha-f-box-outline"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 0.4
                on_release: app.toggle_current_story_focus()

            MDIconButton:
                icon: "format-vertical-align-top"
                on_release: app.scroll_to_top()

            MDIconButton:
                icon: 'bullseye-arrow'
                on_release: app.scroll_to_current()

            MDIconButton:
                icon: "format-vertical-align-bottom"
                on_release: app.scroll_to_bottom()

            Widget
                size_hint_x: .5

            MDIconButton
                id: pencil_button
                icon: "pencil"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: app.change_tool('pencil')
                on_release: self.text_color = 1, 1, 1, 1
                on_press: fill_button.text_color = 0, 0, 0, .4
                on_release: eraser_button.text_color = 0, 0, 0, .4
            MDIconButton
                id: fill_button
                icon: "format-color-fill"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, .4
                on_press: app.change_tool('fill')
                on_press: app.change_screen('color_screen')
                on_release: pencil_button.text_color = 0, 0, 0, .4
                on_release: eraser_button.text_color = 0, 0, 0, .4
            MDIconButton
                id: eraser_button
                icon: "eraser"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, .4
                on_press: app.change_tool('eraser')
                on_release: self.text_color = 1, 1, 1, 1
                on_release: pencil_button.text_color = 0, 0, 0, .4
                on_release: fill_button.text_color = 0, 0, 0, .4
            MDIconButton
                icon: "close-box"
                on_press: app.change_screen('clear_all_conf_screen')
        MDBoxLayout:
            spacing: 3
            size_hint_y: 0.039


            MDRaisedButton:
                #size_hint_x: 2
                text: '   PAGE   '
                text_color: 1, 1, 1, 1

                md_bg_color: .1, .1, .1, 1
            MDRaisedButton:
                text: '                          TITLE                         '
                text_color: 1, 1, 1, 1
                md_bg_color: .1, .1, .1, 1
            MDRaisedButton:
                text: '  TOTAL  '
                text_color: 1, 1, 1, 1
                md_bg_color: .1, .1, .1, 1
            MDRaisedButton:
                text: '   CAM    '
                text_color: 1, 1, 1, 1
                md_bg_color: .1, .1, .1, 1
            MDRaisedButton:
                text: '                         NOTES                        '
                text_color: 1, 1, 1, 1
                md_bg_color: .1, .1, .1, 1
        Widget:
            size_hint_y: None
            height: 4

        RecycleView
            id: rvrt
            data: app.rvdata
            viewclass: 'Row'
            scroll_type: ['bars', 'content']
            bar_width: 30
            bar_inactive_color: [.7, .7, .7, .6]
            RecycleBoxLayout:
                id: rv
                default_size: None, dp(80)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        MDBoxLayout:
            size_hint_y: .001
            canvas:
                Color:
                    rgb: 0.6, 0.6, 0.6
                Rectangle:
                    pos: self.pos
                    size: self.size
        MDBoxLayout:
            size_hint_y: .02
            canvas:
                Color:
                    rgb: 0.8, 0.8, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                id: conn_status
                text: '  STATUS: '
                font_size: 20


<DrawingScreen@MDScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/blur.png'
    BoxLayout
        orientation: 'vertical'

        # Top spacer
        Widget
            size_hint_y: 1.5

        # Middle layer
        BoxLayout

            # Middle left spacer
            Widget
                size_hint_x: .1

            # main housing
            BoxLayout
                id: main
                orientation: 'vertical'
                size_hint_x: None
                width: 850
                size_hint_y: None
                height: 500

                canvas.before:
                    Color:
                        rgb: 0,0,0,1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgb: .3, .3, .3
                    Rectangle:
                        pos: main.pos
                        size: main.size
                MDLabel:
                    id: drawing_screen_title
                    color: 1,1,1,1
                    halign: 'center'

                # toolbar
                BoxLayout
                    Widget
                        size_hint_x: .5
                    MDIconButton
                        icon: "album"
                        on_release: app.root.current = 'width_screen'
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0
                    Button:
                        id: drawing_color_button
                        background_normal: ''
                        background_color: 1, 0 ,1 ,1
                        size_hint: None, None
                        size: 40, 40
                        pos_hint: {'x':.2, 'y':.3}
                        on_release: app.root.current = 'color_screen'
                    MDIconButton
                        id: dw_pencil_btn
                        icon: "pencil"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1
                        pos_hint: {"center_x": .5, "center_y": .5}
                        user_font_size: 64
                        on_press: self.text_color = 1, 1, 1
                        on_press: dw_fill_btn.text_color = 0, 0, 0
                        on_release: app.change_tool('pencil')
                    MDIconButton
                        id: dw_fill_btn
                        icon: "format-color-fill"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0
                        pos_hint: {"center_x": .5, "center_y": .5}
                        user_font_size: 64
                        on_press: self.text_color = 1, 1, 1
                        on_press: dw_pencil_btn.text_color = 0, 0, 0
                        on_release: app.change_tool('fill')
                    MDIconButton
                        icon: "close-box"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        user_font_size: 64
                        on_release: app.clear_current_drawing()
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0
                    Widget
                        size_hint_x: .5
                # Drawing housing
                BoxLayout
                    size_hint_y: None
                    height: 240
                    Widget
                    # Drawing area
                    MyPaintPage:
                        id: mypaintpage
                        size_hint_x: None
                        size_hint_y: None
                        height: 240
                        width: 800
                    Widget
                #Bottom bar
                BoxLayout:
                    Widget:
                        size_hint_x: 5
                    MDIconButton:
                        icon: "close-outline"
                        theme_text_color: "Custom"
                        on_press: app.back_to_main_page()
                        on_release: app.change_screen('current')
                    Widget
                        size_hint_x: .1
                    MDIconButton:
                        icon: "check-outline"
                        theme_text_color: "Custom"
                        on_press: app.back_to_main_page()
                        on_release: app.change_screen('current')
            # Middle right spacer
            Widget
                size_hint_x: .1
        # Bottom spacer
        Widget
            size_hint_y: 2



<ThinGap@Widget>
    size_hint_y: None
    height: 3


<VertBox@MDBoxLayout>
    orientation: 'vertical'



<LWRundown@MDScreen>
    RundownTemplate
        id: lw_rundown
        logo: 'assets/lw.png'
        data: app.rvdata


<TMRundown@MDScreen>
    RundownTemplate
        id: tm_rundown
        logo: 'assets/tm.png'
        data: app.rvdata


